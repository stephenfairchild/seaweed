{
    "compilerOptions": {
        "esModuleInterop": true,
        "isolatedModules": true,
        "lib": ["ESNext", "dom"],
        "target": "es5",
        "noImplicitAny": true,
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true,
        "strict": true,
        "types": ["jest", "node"],
        "outDir": "./build",
        "paths": {
            "seaweed": ["./src/index.ts"]
        }
    },
    "include": ["./src"]
}
